@model cvManagement.Models.Account
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ShowAllAccounts</h2>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassWord)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
            </th>
        </tr>
    </thead>

    @foreach (var item in Model.listAccount)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <p>****************</p>
            </td>
            <td>
                @{
                    if (item.Role == 0)
                    {
                        @Html.Label("Human Resource")
                    }
                    else
                    {
                        @Html.Label("Interviewer")
                    }
                }
            </td>
            <td>
                @{
                    if (item.Id == Model.account.Id)
                    {
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger", onclick = "return confirm('Are you sure you wish to delete this account?');" })

                        @Html.ActionLink("Edit", "editAccount", new { id = item.Id }, new { @class = "btn btn-outline-info" })
                    }
                }
            </td>
        </tr>
    }
</table>


<p>
    @Html.ActionLink("Create", "createAccount", "", new { @class = "btn btn-outline-primary" })
</p>

@if (TempData["InsertResult"] != null)
{
    <script type="text/javascript">

                alert("Record Is Inserted Successfully");
    </script>

}
@if (TempData["UpdateResult"] != null)
{
    <script type="text/javascript">

                alert("Record Is Updated Successfully");
    </script>

}
@if (TempData["DeleteResult"] != null)
{
    <script type="text/javascript">

                alert("Record Is Deleted Successfully");
    </script>

}
