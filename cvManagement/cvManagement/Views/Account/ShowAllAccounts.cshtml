@model cvManagement.Models.Account
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ShowAllAccounts</h2>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassWord)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model.listAccount)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <p>****************</p>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.ActionLink("Edit", "createEditAccount", new { id = item.Id }, new { @class ="btn btn-outline-warning"}) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id },new { @class = "btn btn-outline-danger"})
            </td>
        </tr>
    }
</table>


<p>
    @Html.ActionLink("Create", "createEditAccount",null,new { @class = "btn btn-primary"})
</p>
