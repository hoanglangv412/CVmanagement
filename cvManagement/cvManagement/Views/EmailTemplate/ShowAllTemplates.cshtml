@model cvManagement.Models.EmailTemplate
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Email Templates</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                No
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th></th>
        </tr>
    </thead>
    <!--So dong-->
    @{ int rowNo = 0; }
    <!--Noi dung-->
    @foreach (var item in Model.listTemplate)
    {
        <tr>
            <td>
                @(rowNo += 1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                <div class="row">
                    <div class="col-6">
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure to delete this template?');" })
                    </div>
                    <div class="col-6">
                        @Html.ActionLink("Edit", "EditTemplate", new { id = item.Id }, new { @class = "btn btn-warning ml-3" })
                    </div>
                </div>
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Create", "CreateTemplate", "", new { @class = "btn btn-primary" })
</p>

<!--Script thong bao-->
@if (TempData["InsertResult"] != null)
{
    <script type="text/javascript">
        alert("Record Is Inserted Successfully");
    </script>

}
@if (TempData["UpdateResult"] != null)
{
    <script type="text/javascript">
        alert("Record Is Updated Successfully");
    </script>

}
@if (TempData["DeleteResult"] != null)
{
    <script type="text/javascript">
        alert("Record Is Deleted Successfully");
    </script>
}
