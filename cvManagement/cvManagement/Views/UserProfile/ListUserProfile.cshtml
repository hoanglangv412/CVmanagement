@model cvManagement.Models.userProfile
@{
    ViewBag.Title = "ListUserProfile";
}
<h4>List Profile</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                HỌ VÀ TÊN
            </th>
            <th>
                VỊ TRÍ
            </th>
            <th>
                NGUỒN NHẬN HỒ SƠ
            </th>
            <th>
                NGÀY NHẬN HỒ SƠ
            </th>
            <th>
                KẾT QUẢ LỌC HỒ SƠ
            </th>
            <th>
                NGÀY HẸN PHỎNG VẤN
            </th>
            <th>
                KẾT QUẢ PHỎNG VẤN
            </th>
            <th>
                TRẠNG THÁI
            </th>
            <th>
                CV
            </th>
            <th>
                GHI CHÚ
            </th>
        </tr>
    </thead>
    <tbody>
        @{ int rowNo = 0; }
        @foreach (var item in Model.ListProfile)
        {
            <tr>
                <td>
                    @(rowNo += 1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @{
                        switch (@Html.DisplayFor(modelItem => item.PositionId).ToString())
                        {
                            case "1":
                                <text>
                                    <p>Fresher C#</p>
                                </text>
                                break;
                            case "2":
                                <text>
                                    <p>C#</p>
                                </text>
                                break;
                            case "3":
                                <text>
                                    <p>Fresher PHP</p>
                                </text>
                                break;
                            case "4":
                                <text>
                                    <p>PHP</p>
                                </text>
                                break;
                            case "5":
                                <text>
                                    <p>tester</p>
                                </text>
                                break;
                        }
                    }
                </td>
                <td>
                    @{
                        switch (@Html.DisplayFor(modelItem => item.SourceId).ToString())
                        {
                            case "1":
                                <text>
                                    <p>topcv</p>
                                </text>
                                break;
                            case "2":
                                <text>
                                    <p>vncareer</p>
                                </text>
                                break;
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplyDate)
                </td>
                <td>
                    @{
                        switch (@Html.DisplayFor(modelItem => item.CvResult).ToString())
                        {
                            case "0":
                                <button type="button" class="btn btn-light" disabled>Neutral</button>
                                break;
                            case "1":
                                <button type="button" class="btn btn-success" disabled>Pass</button>
                                break;
                            case "2":
                                <button type="button" class="btn btn-danger" disabled>Fail</button>
                                break;
                        }
                    }
                </td>
                <td>
                    @if (item.InterviewDate == DateTime.MinValue)
                    {
                        @Html.TextBox("")
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.InterviewDate)
                    }
                </td>
                <td>
                    @{
                        switch (@Html.DisplayFor(modelItem => item.InterviewResult).ToString())
                        {
                            case "0":
                                <button type="button" class="btn btn-light" disabled>Neutral</button>
                                break;
                            case "1":
                                <button type="button" class="btn btn-success" disabled>Pass</button>
                                break;
                            case "2":
                                <button type="button" class="btn btn-danger" disabled>Fail</button>
                                break;
                        }
                    }
                </td>
                <td>
                    @{
                        switch (@Html.DisplayFor(modelItem => item.Status).ToString())
                        {
                            case "1":
                                <text>
                                    <p>Đã nhận CV</p>
                                </text>
                                break;
                            case "2":
                                <text>
                                    <p>Đã gửi thư cảm ơn</p>
                                </text>
                                break;
                            case "3":
                                <text>
                                    <p>Nhận việc</p>
                                </text>
                                break;

                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CvLink)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="container">
    @Html.ActionLink("Create", "InsertUserProfile", null, new { @class = "btn btn-primary" })
</div>

